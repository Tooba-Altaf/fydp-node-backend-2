// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONFIG_URL")
}

enum UserType {
  STAFF
  INSTITUTE
  MANUFACTURER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum VaccineStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DispatchStatus {
  REQUESTED
  DISPATCH
  RECEIVED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model users {
  id            Int        @id @default(autoincrement())
  email         String
  password      String
  name          String
  contact       String?
  license       String?
  gender        Gender?
  type          UserType   @default(MANUFACTURER)
  status        UserStatus @default(ACTIVE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime?  @default(now()) @updatedAt
  deletedAt     DateTime?
  date_of_birth DateTime?
  cnic          String?
  location      String?
}

model vaccine {
  id                Int           @id @default(autoincrement())
  name              String
  doses             Int?          @default(1)
  info              String
  status            VaccineStatus @default(PENDING)
  manufacturer_name String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @default(now()) @updatedAt
  deletedAt         DateTime?
}
