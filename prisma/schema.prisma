// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_CONFIG_URL")
}

enum UserType {
  STAFF
  INSTITUTE
  MANUFACTURER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum VaccineStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DispatchStatus {
  REQUESTED
  DISPATCH
  RECEIVED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum SortOrder {
  ASC
  DESC
}

model users {
  id            Int        @id @default(autoincrement())
  email         String     @unique
  password      String?
  name          String
  contact       String?
  license       String?
  gender        Gender?
  type          UserType   @default(MANUFACTURER)
  status        UserStatus @default(INACTIVE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime?  @default(now()) @updatedAt
  deletedAt     DateTime?
  date_of_birth DateTime?
  cnic          String?
  location      String?
  institute_id  Int?
  institute     users?     @relation("instituteHasStaff", fields: [institute_id], references: [id])
  staff         users[]    @relation("instituteHasStaff")

  vaccines vaccine[]
  dispatch dispatch[]
}

model vaccine {
  id              Int           @id @default(autoincrement())
  name            String
  doses           Int?          @default(1)
  info            String?
  status          VaccineStatus @default(PENDING)
  manufacturer    users         @relation(fields: [manufacturer_id], references: [id])
  manufacturer_id Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @default(now()) @updatedAt
  deletedAt       DateTime?

  dispatch dispatch[]
}

model dispatch {
  id           Int            @id @default(autoincrement())
  vaccine      vaccine        @relation(fields: [vaccine_id], references: [id])
  vaccine_id   Int
  batch_id     String 
  status       DispatchStatus @default(REQUESTED)
  civilian     civilian?      @relation(fields: [civilian_id], references: [id])
  civilian_id  Int?
  institute    users          @relation(fields: [institute_id], references: [id])
  institute_id Int
  staff    users          @relation(fields: [staff_id], references: [id])
  staff_id Int?
    request_date      DateTime      @default(now())
    dispatch_date       DateTime?      
    receive_date       DateTime?     
    vaccination_date DateTime?
}

model civilian {
  id            Int        @id @default(autoincrement())
  cnic          String     @unique
  name          String
  date_of_birth DateTime?
  gender        Gender
  contact       String
  dispatch      dispatch[]
}
